<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_loyalty_reward_form_inherit_apply_multiple" model="ir.ui.view">
    <field name="name">loyalty.reward.view.form.inherit.apply_multiple</field>
    <field name="model">loyalty.reward</field>
    <field name="priority" eval="17" />
    <field name="inherit_id" ref="loyalty.loyalty_reward_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='discount_max_amount']" position="after">
        <field name="apply_multiple"/>
      </xpath>
    </field>
  </record>
</odoo>
